{
  "schema_version": 1,
  "patterns": {
    "inefficient_algorithms": {
      "description": "Potentially inefficient algorithm",
      "indicators": [
        "\\.sort\\(\\).*\\.sort\\(\\)",
        "in\\s+range\\(len\\(",
        "list\\(.*\\)\\[0\\]",
        "sort\\.Slice\\(",
        "Vec::sort"
      ],
      "severity": "medium"
    },
    "memory_leaks": {
      "description": "Potential memory leak",
      "indicators": [
        "global\\s+\\w+.*=.*\\[\\]",
        "while\\s+True:.*append\\(",
        "cache\\s*=\\s*\\{\\}",
        "static\\s+\\w+\\s+\\w+\\s*=\\s*new",
        "Box::leak"
      ],
      "severity": "high"
    },
    "nested_loops": {
      "description": "Deep nested loops (O(n\u00b3) or worse)",
      "indicators": [
        "for\\s+.*:\\s*\\n.*for\\s+.*:\\s*\\n.*for\\s+",
        "while\\s+.*:\\s*\\n.*while\\s+.*:\\s*\\n.*while\\s+"
      ],
      "severity": "high"
    },
    "synchronous_io": {
      "description": "Synchronous I/O operation",
      "indicators": [
        "requests\\.get\\(",
        "urllib\\.request\\.",
        "httplib\\.",
        "open\\(.*['\\\"]r['\\\"]",
        "sleep\\(",
        "time\\.sleep\\(",
        "http\\.Get\\(",
        "os\\.Open\\(",
        "std::fs::read_to_string",
        "std::fs::File::open",
        "File\\.ReadAllText",
        "File\\.WriteAllText",
        "\\.Result",
        "\\.Wait\\("
      ],
      "severity": "high"
    }
  }
}
