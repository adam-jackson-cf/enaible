{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "analysisAt",
    "executiveSummary",
    "findings",
    "insights",
    "recommendations",
    "limitations"
  ],
  "properties": {
    "analysisAt": {"type": "string"},
    "executiveSummary": {"type": "string"},
    "findings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "statement", "confidence", "importance", "sourceIds"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "statement": {"type": "string"},
          "confidence": {"type": "string", "enum": ["high", "medium", "low"]},
          "importance": {"type": "string", "enum": ["key", "supporting", "background"]},
          "sourceIds": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "insights": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["statement", "sourceIds"],
        "properties": {
          "id": {"type": "string"},
          "statement": {"type": "string"},
          "sourceIds": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "recommendations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "action", "rationale", "priority", "sourceIds"],
        "properties": {
          "id": {"type": "string"},
          "action": {"type": "string"},
          "rationale": {"type": "string"},
          "priority": {"type": "string", "enum": ["high", "medium", "low"]},
          "sourceIds": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "limitations": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
